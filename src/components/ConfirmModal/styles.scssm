@import "~sass/utils/index";

.content {
  background: $white;
  position: relative;
  max-width: 400px;
  width: 90%;
  margin: auto;
  padding: 30px;
}

.close {
  display: inline-block;
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  vertical-align: middle;
  height: 15px;
  width: 15px;
  position: absolute;
  right: 20px;
  top: 20px;
}

.title {
  font-size: 17px;
  text-align: center;
  margin-bottom: 10px;
}
