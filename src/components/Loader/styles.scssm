@import "~sass/utils/index";

.loader {
  align-items: center;
  background-color: rgba(10, 10, 10, 0.86);
  bottom: 0;
  display: none;
  justify-content: center;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 22;

  &.is-active {
    display: flex;
  }
}

.icon {
  height: 60px;
  width: 60px;
}